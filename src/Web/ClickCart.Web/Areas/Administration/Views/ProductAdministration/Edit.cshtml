@model ProductDto

@{
    List<ProductCategoryDto> categories = (List<ProductCategoryDto>) ViewData["Categories"];
}

<div class="form-container">
    <h1 class="form-heading">Create Product</h1>
    <form asp-area="Administration" asp-controller="ProductAdministration" asp-action="Edit" method="post">
        <div>
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" type="text" name="name" placeholder="Name..." class="form-input" />
        </div>
        <div>
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" type="number" name="price" placeholder="Price..." class="form-input" step="0.10" />
        </div>
        <div>
            <label asp-for="ImageUrl" class="form-label">Image URL</label>
            <input asp-for="ImageUrl" type="text" name="imageurl" placeholder="URL..." class="form-input" />
        </div>
        <div>
            <label asp-for="Description" class="form-label">Description</label>
            <input asp-for="Description" type="text" name="description" placeholder="..." class="form-input" />
        </div>
        <div class="admin-form-group">
            <label>Category</label>
            <select asp-for="Category.Id">
                <option value="0" disabled selected>    Select Category   </option>
                @foreach (var category in categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>
        <div>
            <button class="form-button">Edit Product</button>
            <a style="text-decoration: none" class="admin-panel-create-button-label" asp-area="Administration" asp-controller="AdministrationPanel" asp-action="Index" class="form-link">Back</a>
        </div>
    </form>
</div>